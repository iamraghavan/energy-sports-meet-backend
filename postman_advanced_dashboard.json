			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// Global Pre-request Script",
					"// Ensures every request has access to the token variable",
					"if (!pm.collectionVariables.get(\"token\")) {",
					"    console.warn(\"⚠️ No token found. Please run the 'Login' request first.\");",
					"}"
				]
			}
		},
